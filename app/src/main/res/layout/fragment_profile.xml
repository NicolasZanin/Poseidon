<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp"
    android:layout_gravity="center"
    android:padding="10dp"
    android:background="@drawable/popup"
    tools:context=".WeatherConditionCreatorFragment">

    <!-- Bouton de déconnexion -->
    <Button
        android:id="@+id/btnDeconnexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Déconnexion"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/close_button"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        />

    <!-- Image de profil -->
    <ImageView
        android:id="@+id/imgProfil"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/profil"
        app:layout_constraintTop_toBottomOf="@id/btnDeconnexion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        />

    <!-- Nom du profil -->
    <TextView
        android:id="@+id/txtNomProfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Julian ZAZIN"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/imgProfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        />

    <!-- Texte avec nombre et "événements notifiés" -->
    <TextView
        android:id="@+id/txtNombreEvenements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 événements notifiés"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/txtNomProfil"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        />

    <!-- Bannière "HISTORIQUE" -->
    <TextView
        android:id="@+id/txtHistorique"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HISTORIQUE"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/txtNombreEvenements"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        />

    <!-- Historique -->
    <ListView
        android:id="@+id/listHistorique"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/txtHistorique"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
